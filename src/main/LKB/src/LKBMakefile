
#FREELINGDIR=/usr/local/FreeLing
FREELINGDIR=/home/padro/test
MYINCLUDES=/usr/local/include
MYLIBS=/usr/local/lib

IPATH= -I$(FREELINGDIR)/include  -I/usr/include/db4 -I$(MYINCLUDES)
LPATH= -L$(FREELINGDIR)/lib  -L$(MYLIBS)
LIBS= -lmorfo -lfries -lomlet -ldb_cxx -lpcre -lcfg+

LKBanalyzer :	LKBanalyzer.cc LKBconfig.h
	g++ -o LKBanalyzer LKBanalyzer.cc $(IPATH) $(LPATH) $(LIBS)
	cp LKBanalyzer ..

clean:
	rm -f *.o LKBanalyzer
